<body>

<div id="loadingOverlay">
    <div class="spinner-border text-light" role="status"></div>
</div>

<div class="container mt-5">
    <div class="glass-card">

        <h3 class="mb-4">TABLE COMPARISON</h3>

        <div class="row mb-4">
            <div class="col-md-6">
                <input id="tableName"
                       class="form-control"
                       placeholder="Enter table name"
                       style="background:rgba(255,255,255,0.15); color:white; border:none;">
            </div>
            <div class="col-md-2">
                <button class="btn btn-light w-100"
                        onclick="runComparison()">Compare</button>
            </div>
        </div>

        <!-- SUMMARY -->
        <div id="summarySection" style="display:none;" class="mb-4">
            <div class="badge-glass">Modified: <span id="different"></span></div>
            <div class="badge-glass">Only in Test: <span id="onlyTest"></span></div>
            <div class="badge-glass">Only in Prod: <span id="onlyProd"></span></div>
        </div>

        <!-- TABLE -->
        <div id="tableSection" style="display:none;">
            <table id="modifiedTable">
                <thead>
                <tr>
                    <th>Primary Key</th>
                    <th>Changed Columns</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>

<script>

function showLoading() {
    $("#loadingOverlay").css("display", "flex");
}

function hideLoading() {
    $("#loadingOverlay").hide();
}

function runComparison() {

    let tableName = $("#tableName").val();
    if (!tableName) return;

    showLoading();

    fetch("/api/compare/" + tableName, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({})
    })
    .then(res => res.json())
    .then(data => {
        renderResult(data);
        hideLoading();
    })
    .catch(err => {
        hideLoading();
        alert("Error occurred");
    });
}

function renderResult(data) {

    $("#summarySection").show();
    $("#tableSection").show();

    $("#different").text(data.summary.different || 0);
    $("#onlyTest").text(data.summary.onlyInTest || 0);
    $("#onlyProd").text(data.summary.onlyInProd || 0);

    let tbody = $("#modifiedTable tbody");
    tbody.empty();

    data.modifiedRows.forEach((row, index) => {

        let pk = Object.values(row.primaryKey).join(" | ");

        tbody.append(`
            <tr class="modified-row">
                <td>${pk}</td>
                <td>${row.changedColumns.length}</td>
                <td>
                    <button class="expand-btn"
                        onclick="toggleDetails(${index})">
                        Expand
                    </button>
                </td>
            </tr>
            <tr id="detail-${index}" style="display:none;">
                <td colspan="3">
                    ${buildDetail(row)}
                </td>
            </tr>
        `);
    });
}

function buildDetail(row) {

    let html = `
        <div class="glass-card mt-3">
            <strong>Primary Key</strong><br>`;

    Object.entries(row.primaryKey).forEach(([k,v]) => {
        html += `${k} = ${v}<br>`;
    });

    html += `<br>
        <table>
            <thead>
                <tr>
                    <th>Column</th>
                    <th>Test Value</th>
                    <th>Prod Value</th>
                </tr>
            </thead>
            <tbody>`;

    row.changedColumns.forEach(col => {
        html += `
            <tr>
                <td>${col.columnName}</td>
                <td class="old-value">${col.testValue ?? ''}</td>
                <td class="new-value">${col.prodValue ?? ''}</td>
            </tr>
        `;
    });

    html += `</tbody></table></div>`;

    return html;
}

function toggleDetails(index) {
    $("#detail-" + index).toggle();
}

</script>

</body>
</html>
